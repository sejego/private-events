<div class="landing-page columns is-mobile is-centered">

  <div class="column is-3 is-centered mt-2">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'box has-text-centered' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <div class="control">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Reset", :class => 'button is-primary' %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
